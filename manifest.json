{
  "manifest_version": 2,
  "name": "VoiceFiller Speech To Text",
  "short_name": "VoiceFiller",
  "description": "VoiceFiller - fill the website forms and inputs with latest Speech To Text technology",
  "version": "0.0.0.8",
  "icons": {
    "16": "icons/favicon16.png",
    "32": "icons/favicon48.png",
    "192": "icons/favicon128.png"
  },
  "browser_action": {
    "default_icon": "icons/favicon128.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "js/contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "js/background.js",
      "js/chrome-extension-async.js"
    ],
    "persistent": false,
    "run_at": "document_idle"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "commands": {
    "toggle-feature-foo": {
      "suggested_key": {
        "default": "Alt+R",
        "mac": "Alt+R"
      },
      "description": "Start speech to text"
    }
  }
}